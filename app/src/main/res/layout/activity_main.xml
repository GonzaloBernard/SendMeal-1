<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation= "vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextviewNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textviewNombreUsuario"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextNombreUsuario"
            android:inputType="textPersonName"
            android:textSize="@dimen/etiquetas"
            android:maxLength="20"/>

        <TextView
            android:id="@+id/TextViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textviewContase単a"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextContase単a"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas"
            android:maxLength="20"/>
        <TextView
            android:id="@+id/textViewErrorPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/errorPassword"
            android:textColor="@color/colorError"
            android:textSize="@dimen/error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewPasswordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textRepitaContrase単a"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPasswordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/textRepitaContrase単a"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewErrorPassR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/errorPassword"
            android:textColor="@color/colorError"
            android:textSize="@dimen/error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewCorreo"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextCorreo"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/etiquetas"
            android:maxLength="40"/>

        <TextView
            android:id="@+id/textViewErrorCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/errorCorreo"
            android:textColor="@color/colorError"
            android:textSize="@dimen/error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewTarjetaCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTarjetaCredito"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextTarjetaNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextTarjetaNumero"
            android:digits="01234 56789"
            android:inputType="number"
            android:maxLength="19"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewErrorTarjetaNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/errorTarjetaNumero"
            android:textColor="@color/colorError"
            android:textSize="@dimen/error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewTarjetaVencimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTarjetaCreditoVencimiento"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="@string/hintCCV"
                android:inputType="number"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/editTextTarjetaVencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="@string/hintFechaTarjeta"
                android:digits="1234567890/"
                android:inputType="number"
                android:maxLength="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewErrorCCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/errorCCV"
                android:textColor="@color/colorError"
                android:textSize="@dimen/error"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textViewErrorTarjetaVencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/errorTarjetaVencimiento"
                android:textColor="@color/colorError"
                android:textSize="@dimen/error"
                android:visibility="gone" />
    </LinearLayout>

        <TextView
            android:id="@+id/textViewTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTipoCuenta"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <RadioGroup
            android:id="@+id/radioGroupTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonBase"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonBase"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonPremium"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonPremium"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonFull"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonFull"
                android:textSize="@dimen/etiquetas" />
        </RadioGroup>
        <TextView
            android:id="@+id/textViewErrorTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/errorTipoCuenta"
            android:textColor="@color/colorError"
            android:textSize="@dimen/error"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCreditoInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewCreditoInicial"
                android:textColor="@color/colorEtiquetas"
                android:textSize="@dimen/etiquetas" />

            <TextView
                android:id="@+id/textViewSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text=""/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarCreditoInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:max="1400"/>

        <TextView
            android:id="@+id/textViewNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewNotificarCorreo"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <ToggleButton
            android:id="@+id/toggleButtonNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:checked="false"
            android:textOff="@string/toggleButtonNotificarCorreoOff"
            android:textOn="@string/toggleButtonNotificarCorreoOn" />

        <Switch
            android:id="@+id/switchEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/switchEsVendedor"
            android:textColor="@color/colorEtiquetas"
            android:textSize="@dimen/etiquetas" />

        <LinearLayout
            android:id="@+id/layoutEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewAlias" />

            <EditText
                android:id="@+id/editTextAias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/editTextAliasVendedor"
                android:maxLength="20"/>
            <TextView
                android:id="@+id/textViewErrorAliasVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/errorAlias"
                android:textColor="@color/colorError"
                android:textSize="@dimen/error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewCBU" />

            <EditText
                android:id="@+id/editTextCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/hintEditTextCBU"
                android:maxLength="22"/>
            <TextView
                android:id="@+id/textViewErrorCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/errorCBU"
                android:textColor="@color/colorError"
                android:textSize="@dimen/error"
                android:visibility="gone" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxAceptarTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="@string/checkBoxAceptarTerminos" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:enabled="false"
            android:text="@string/buttonRegistrar"
            android:textSize="@dimen/etiquetas" />
    </LinearLayout>

</ScrollView>