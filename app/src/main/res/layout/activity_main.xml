<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation= "vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/TextviewNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Nombre Usuario" />

    <EditText
        android:id="@+id/editTextNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/TextViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="PassWord" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas" />

    <TextView
        android:id="@+id/textViewPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Repita contraseña" />

        <EditText
            android:id="@+id/editTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas" />

    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Correo Electronico" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:ems="10"
        android:hint="Ingrese email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textViewTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Tarjeta de Credito" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNumeroTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:ems="8"
            android:hint="Número"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextCCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:ems="4"
            android:hint="CCV"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextFechaTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:ems="4"
            android:hint="MM / AA"
            android:inputType="date" />
    </LinearLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTipoCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Tipo de cuenta"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonBase"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Base"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonPremium"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Premium"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonFull"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Full"
                android:textSize="@dimen/etiquetas" />

        </RadioGroup>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewCreditoInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Credito Inicial:" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text=""/>
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekBarCreditoInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:max="1400"/>



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:text="Notificar por correo Electronico" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/etiquetas"
        android:layout_margin="@dimen/margin"
        android:checked="false"
        android:textOff="NO ENVIAR NOTIFICACIONES  AL MAIL"
        android:textOn="ENVIAR NOTIFICACIONES  AL MAIL" />

        <Switch
            android:id="@+id/switchEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="Es Vendedor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="Alias CBU" />

        <EditText
            android:id="@+id/editTextNombreVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewCBU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="CBU" />

        <EditText
            android:id="@+id/editTextCBU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:inputType="number"
            android:text="CBU" />
    </LinearLayout>

        <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
        android:text="Aceptar Terminos y Condiciones" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:enabled="false"
            android:text="Registrar"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>