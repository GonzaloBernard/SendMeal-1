<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation= "vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextviewNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/TextviewNombreUsuario"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextNombreUsuario"
            android:inputType="textPersonName"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/TextViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/TextviewContase単a"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextContase単a"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/TextRepitaContrase単a"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPasswordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/TextRepitaContrase単a"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewCorreo"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextCorreo"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewTarjetaCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTarjetaCredito"
            android:textSize="@dimen/etiquetas" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:ems="8"
                android:hint="@string/TextNumero"
                android:inputType="number"
                android:maxLength="19"
                android:textSize="@dimen/etiquetas" />


            <EditText
                android:id="@+id/editTextCCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="CCV"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextFechaTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="MM / AA"
                android:inputType="date" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="Tipo de cuenta"
            android:textSize="@dimen/etiquetas" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonBase"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Base"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonPremium"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Premium"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonFull"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="Full"
                android:textSize="@dimen/etiquetas" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewCreditoInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="Credito Inicial:" />

            <TextView
                android:id="@+id/textViewSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text=""/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarCreditoInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:max="1400"/>

        <TextView
            android:id="@+id/textNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="Notificar por correo Electronico" />

        <ToggleButton
            android:id="@+id/toggleButtonNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:checked="false"
            android:textOff="NO ENVIAR NOTIFICACIONES  AL MAIL"
            android:textOn="ENVIAR NOTIFICACIONES  AL MAIL" />

        <Switch
            android:id="@+id/switchEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="Es Vendedor" />

        <LinearLayout
            android:id="@+id/layoutEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="Alias CBU" />

            <EditText
                android:id="@+id/editTextNombreVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name" />

            <TextView
                android:id="@+id/textViewCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="CBU" />

            <EditText
                android:id="@+id/editTextCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="number"
                android:hint="CBU" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxAceptarTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="Aceptar Terminos y Condiciones" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:enabled="false"
            android:text="Registrar" />
    </LinearLayout>

</ScrollView>