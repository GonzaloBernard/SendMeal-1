<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation= "vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextviewNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textviewNombreUsuario"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextNombreUsuario"
            android:inputType="textPersonName"
            android:textSize="@dimen/etiquetas"
            android:maxLength="20"/>

        <TextView
            android:id="@+id/TextViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textviewContase単a"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextContase単a"
            android:inputType="textPassword"
            android:textSize="@dimen/etiquetas"
            android:maxLength="20"/>

        <TextView
            android:id="@+id/textViewPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textRepitaContrase単a"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextPasswordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/textRepitaContrase単a"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewErrorPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/ErrorPassword"
            android:textColor="#F80101"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewCorreo"
            android:textSize="@dimen/etiquetas" />

        <EditText
            android:id="@+id/editTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextCorreo"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/etiquetas"
            android:maxLength="40"/>

        <TextView
            android:id="@+id/textViewTarjetaCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTarjetaCredito"
            android:textSize="@dimen/etiquetas" />
        <EditText
            android:id="@+id/editTextNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:ems="10"
            android:hint="@string/editTextNumero"
            android:inputType="number"
            android:maxLength="19"
            android:textSize="@dimen/etiquetas" />

        <TextView
            android:id="@+id/textViewTarjetaCreditoVencimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTarjetaCreditoVencimiento"
            android:textSize="@dimen/etiquetas" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTextCCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="@string/hintCCV"
                android:inputType="number"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/editTextFechaTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="4"
                android:hint="@string/hintFechaTarjeta"
                android:inputType="date"
                android:maxLength="5"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewTipoCuenta"
            android:textSize="@dimen/etiquetas" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonBase"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonBase"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonPremium"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonPremium"
                android:textSize="@dimen/etiquetas" />

            <RadioButton
                android:id="@+id/radioButtonFull"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/radioButtonFull"
                android:textSize="@dimen/etiquetas" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCreditoInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewCreditoInicial" />

            <TextView
                android:id="@+id/textViewSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text=""/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarCreditoInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:max="1400"/>

        <TextView
            android:id="@+id/textViewNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="@string/textViewNotificarCorreo" />

        <ToggleButton
            android:id="@+id/toggleButtonNotificarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:checked="false"
            android:textOff="@string/toggleButtonNotificarCorreoOff"
            android:textOn="@string/toggleButtonNotificarCorreoOn" />

        <Switch
            android:id="@+id/switchEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="@string/switchEsVendedor" />

        <LinearLayout
            android:id="@+id/layoutEsVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewAlias" />

            <EditText
                android:id="@+id/editTextNombreVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/editTextNombreVendedor"
                android:maxLength="20"/>

            <TextView
                android:id="@+id/textViewCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:text="@string/textViewCBU" />

            <EditText
                android:id="@+id/editTextCBU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/etiquetas"
                android:layout_margin="@dimen/margin"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/hintEditTextCBU"
                android:maxLength="22"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxAceptarTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/etiquetas"
            android:layout_margin="@dimen/margin"
            android:text="@string/checkBoxAceptarTerminos" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:enabled="false"
            android:text="@string/buttonRegistrar"
            android:textSize="@dimen/etiquetas" />
    </LinearLayout>

</ScrollView>